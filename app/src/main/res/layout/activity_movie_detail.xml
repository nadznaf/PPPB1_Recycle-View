<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/detail_tv1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Movie Detail"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:drawableStart="@drawable/baseline_arrow_back"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:background="@drawable/gradient_nav"
        android:clickable="true"
        android:focusable="true"
        />
    <LinearLayout
        android:id="@+id/detail_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="32dp">
        <ImageView
            android:id="@+id/detail_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/venom"/>
        <LinearLayout
            android:id="@+id/detail_ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            >
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="movie title"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_bold"/>
            <TextView
                android:id="@+id/detail_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="movie genre"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/movie_duration"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="duration"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/mini_card"
                    android:padding="2dp"
                    />
                <TextView
                    android:id="@+id/movie_rate"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="rate"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@drawable/mini_card"
                    android:padding="2dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/detail_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginHorizontal="32dp"/>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="4dp"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:text="movie desc"
        android:fontFamily="@font/poppins_regular"
        />

</LinearLayout>